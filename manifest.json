{
  "name": "SimplyClip",
  "description": "A clipboard manager for various browsers",
  "manifest_version": 2,
  "version": "6.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "./test/test.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "32": "./images/paper-note-32.png"
  },
  "options_page": "./test/test.html",
  "browser_action": {
    "default_icon": "./images/paper-note-32.png",
    "default_title": "SimplyClip",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "clipboardRead",
    "clipboardWrite",
    "activeTab",
    "contextMenus",
    "http://127.0.0.1/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "simplyclip@example.com",
      "strict_min_version": "126.0"
    }
  },
  "commands": {
    "download-csv": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Download clipboard contents as CSV"
    },
    "download-doc": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Download clipboard contents as DOC"
    },
    "download-json": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Download clipboard contents as JSON"
    }
  },
  "externally_connectable": {
    "matches": ["http://localhost:8000/*"]
  }
}